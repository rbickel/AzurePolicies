{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "CONTAINER_POLICY_DEPLOY",
    "properties": {
        "displayName": "Ensure Storage policy on container",
        "policyType": "Custom",
        "mode": "All",
        "description": "Ensure Storage policy on container",
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect Name",
                    "description": "The Effect to apply"
                },
                "allowedValues": [
                    "AuditIfNotExists",
                    "DeployIfNotExists"
                ],
                "defaultValue": "AuditIfNotExists"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts/blobServices/containers"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]",
                "details": {
                    "type": "Microsoft.Storage/storageAccounts/blobServices/containers/immutabilityPolicies",
                    "roleDefinitionIds": [
                        "/providers/Microsoft.Authorization/roleDefinitions/17d1049b-9a84-46fb-8f53-869881c3d3ab"
                    ],
                    "deployment": {
                        "properties": {
                            "mode": "incremental",
                            "template": {
                                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                "contentVersion": "1.0.0.0",
                                "resources": [
                                    {
                                        "type": "Microsoft.Storage/storageAccounts/blobServices/containers/immutabilityPolicies",
                                        "apiVersion": "2019-06-01",
                                        "name": "default",
                                        "properties": {
                                            "immutabilityPeriodSinceCreationInDays": 1,
                                            "allowProtectedAppendWrites": false
                                        }
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}